---
type Link = {
  url: string;
  linkName: string;
};

interface NavbarProps {
  principalUrl: string;
  links: Link[];
  image?: string;
  isAuth?: boolean;
}

const { principalUrl, links, image, isAuth } = Astro.props;
---

<header>
  <div>
    <a href={principalUrl}>
      <h2>Panaderia</h2>
    </a>
  </div>

  <nav>
    <ul>
      {
        links.map(({ url, linkName }) => (
          <li>
            <a href={url}>{linkName}</a>
          </li>
        ))
      }
    </ul>

    <div class="actions">
      {
        isAuth ? (
          <>
            <div class="img-container">
              <img
                src={image || "img/avatar-default.jpg"}
                alt="Imagen del Ususario"
              />
            </div>
            <a href="#" class="logout">
              Cerrar Sesión
            </a>
          </>
        ) : (
          <>
            <a href="/login">Iniciar Sesión</a>
            <a href="/registro">Registrar</a>
          </>
        )
      }
    </div>
  </nav>
</header>

<style>
  header {
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
    background-color: #181827;
  }

  nav {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  ul {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    list-style: none;
    margin: 0 auto;
  }

  a {
    text-decoration: none;
    color: white;
    font-weight: bold;
    transition: color 0.2s ease-in-out;
    font-size: 1.2rem;
  }

  a:hover {
    color: #dab892;
  }

  h2 {
    font-size: 2.5rem;
  }

  .actions {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
  }

  .logout:hover {
    color: #ff6161dc;
  }

  .img-container {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid #dab892;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
